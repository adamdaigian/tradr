<ul class="title-area">
  <li class="name">
    <h1><%= link_to('Tradr', root_path) %></h1>
  </li>
  <li class="toggle-topbar menu-icon"><a href="#"><span>Menu</span></a></li>
</ul>
<section class="top-bar-section">
  <ul class="left">
    <li class="divider"></li>
    <li><%= link_to('Stocks', stocks_path) %></li>
    <li class="divider"></li>
  </ul>
  <ul class="right">
    <li class="divider">
    <% if current_user %>
      <li><%= link_to "Edit Profile", edit_user_path(current_user.id) %></li>
      <li class="divider"></li>
      <li><%= link_to "Logout", logout_path, method: 'delete' %></li>
    <% else %>
      <li><%= link_to "Register", new_user_path, remote: true, data: {"reveal-id" => "signup_window"} %></li>
      <li class="divider"></li>
      <li><%= link_to "Login", login_path, remote: true, data: {"reveal-id" => "login_window"} %></li>
    <% end %>
  </ul>
</section>